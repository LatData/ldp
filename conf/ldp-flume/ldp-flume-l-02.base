#Define the sources, channels and sinks
ldp-flume-l-02.sources = src_nc_01
ldp-flume-l-02.channels = chan_01 chan_02 chan_03 chan_04
ldp-flume-l-02.sinks = sink_01 sink_02 sink_03 sink_04

#Configure the sources
ldp-flume-l-02.sources.src_nc_01.type = com.latdata.collect.source.NetcatSource
ldp-flume-l-02.sources.src_nc_01.bind = 0.0.0.0
ldp-flume-l-02.sources.src_nc_01.port = 9902
ldp-flume-l-02.sources.src_nc_01.max-line-length = 12000
ldp-flume-l-02.sources.src_nc_01.ack-every-event = false
ldp-flume-l-02.sources.src_nc_01.pathfilecmdb = ${LDP_HOME}/resources/cmdb_ip-extraData.csv
ldp-flume-l-02.sources.src_nc_01.sourcetype = proxy
ldp-flume-l-02.sources.src_nc_01.useextradata = true
ldp-flume-l-02.sources.src_nc_01.usesourceip = false
ldp-flume-l-02.sources.src_nc_01.channels = chan_01 chan_02 chan_03 chan_04
ldp-flume-l-02.sources.src_nc_01.selector.type = com.latdata.collect.channelselector.RoundRobinChannelSelector

# Configurating the channels
ldp-flume-l-02.channels.chan_01.type = memory
ldp-flume-l-02.channels.chan_01.capacity = 100000
ldp-flume-l-02.channels.chan_01.transactionCapacity = 400

ldp-flume-l-02.channels.chan_02.type = memory
ldp-flume-l-02.channels.chan_02.capacity = 100000
ldp-flume-l-02.channels.chan_02.transactionCapacity = 400

ldp-flume-l-02.channels.chan_03.type = memory
ldp-flume-l-02.channels.chan_03.capacity = 100000
ldp-flume-l-02.channels.chan_03.transactionCapacity = 400

ldp-flume-l-02.channels.chan_04.type = memory
ldp-flume-l-02.channels.chan_04.capacity = 100000
ldp-flume-l-02.channels.chan_04.transactionCapacity = 400


##Configure the sinks
ldp-flume-l-02.sinks.sink_01.type = com.latdata.collect.sink.KafkaSink
ldp-flume-l-02.sinks.sink_01.channel = chan_01
ldp-flume-l-02.sinks.sink_01.kafka.topic = flumel
ldp-flume-l-02.sinks.sink_01.kafka.bootstrap.servers = localhost:9092
ldp-flume-l-02.sinks.sink_01.writeBody = true
ldp-flume-l-02.sinks.sink_01.kafka.topic.metadata.refresh.interval.ms = 2500
ldp-flume-l-02.sinks.sink_01.kafka.serializer.class = kafka.serializer.StringEncoder
ldp-flume-l-02.sinks.sink_01.batch-size = 200
ldp-flume-l-02.sinks.sink_01.kafka.producer.acks = 0
